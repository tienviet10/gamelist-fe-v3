{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "@lib/*": ["modules/gamelist-ui/src/lib/*"],
      "@src/*": ["modules/gamelist-ui/src/*"],
      "@uiLib/*": ["modules/gamelist-ui/src/lib/*"],
      "@uiSrc/*": ["modules/gamelist-ui/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
