{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["vite/client", "vitest"],
    "baseUrl": ".",
      "paths": {
      "@app/*": ["src/app/*"],
      "@gamelist-fe/gamelist-ui": ["modules/gamelist-ui/src/index.ts"],
      "@lib/*": ["modules/gamelist-ui/src/lib/*"],
      "@src/*": ["modules/gamelist-ui/src/*"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "./tsconfig.base.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules"]
}
